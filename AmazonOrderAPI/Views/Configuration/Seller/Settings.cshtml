@using Microsoft.AspNetCore.Mvc.Localization
@model AmazonOrderAPI.Business.Model.Seller.SellerVM
@inject IViewLocalizer Localizer

<div id="StatusReport">
    <div class="">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                @*<h6 class="m-0 font-weight-bold text-primary"></h6>*@
                <h6>@Localizer["Title"]</h6>
            </div>
            <div class="card-body">
                <div class="">
                    <div class="row">
                        <div class="col-md-12">

                            <nav>
                                <div class="nav nav-tabs mt-3" id="nav-tab" role="tablist">
                                    <a class="nav-item nav-link active" id="nav-name-tab" data-toggle="tab" href="#nav-name" role="tab" aria-controls="nav-name" aria-selected="true">@Localizer["NavName"]</a>
                                    @if (Model.Id != 0)
                                    {
                                        <a class="nav-item nav-link" id="nav-basics-tab" data-toggle="tab" href="#nav-basics" role="tab" aria-controls="nav-basics" aria-selected="false">@Localizer["NavBasics"]</a>
                                        <a class="nav-item nav-link" id="nav-WareHouse-tab" data-toggle="tab" href="#nav-WareHouse" role="tab" aria-controls="nav-WareHouse" aria-selected="false">@Localizer["NavWareHouse"]</a>

                                    }
                                </div>
                            </nav>
                            <div class="tab-content" id="nav-tabContent">
                                <div class="tab-pane show active" id="nav-name" role="tabpanel" aria-labelledby="nav-name-tab">
                                    @await Html.PartialAsync("Seller/Section/Name")
                                </div>
                                @if (Model.Id != 0)
                                {
                                    <div class="tab-pane" id="nav-basics" role="tabpanel" aria-labelledby="nav-basics-tab">
                                        @await Html.PartialAsync("Seller/Section/Basics")
                                    </div>
                                    <div class="tab-pane" id="nav-WareHouse" role="tabpanel" aria-labelledby="nav-WareHouse-tab">
                                        @await Component.InvokeAsync("WareHouse", new { SellerId = Model.Id })
                                    </div>

                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>